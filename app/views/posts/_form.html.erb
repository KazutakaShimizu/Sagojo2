 <%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.check_box :active,{},"true","false" %> 
    <%= f.label :active, "募集状況" %>
  </div>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, [["求人", "job"], ["コラム", "column"]] %>
  </div>

  <div class="field">
    <%= f.label :place_list, "場所" %><br>
    <%= text_field_tag 'post[place_list]', @post.place_list.join(',') %>
  </div>

  <div class="field">
    <%= f.label :job_list, "職種" %><br>
    <%= text_field_tag 'post[job_list]', @post.job_list.join(',') %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  
  <div class="field">
    <%= f.label :content %><br>
    <%= f.cktext_area :content %>        
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
